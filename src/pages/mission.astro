---
import "@fontsource-variable/dm-sans"
import "@/styles/globals.css"
import Header from "@/components/Header"
import Footer from "@/components/Footer"
import { SEO } from "astro-seo"
import { ArrowRight } from "lucide-react"
import VisionMission from "@/components/VisionMission"
import CoreValues from "@/components/CoreValues"
import ThemeManager from "@/components/ThemeManager.astro"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link rel="icon" href="/favicon.png" type="image/png" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="manifest" href="/site.webmanifest" />
		<SEO
			title="Mission | incomodum "
			description="Innovative Software Solutions Driving Growth and Excellence"
			openGraph={{
				basic: {
					title: "Mission",
					type: "website",
					image: "/assets/base-og.png"
				},
				optional: {
					locale: "en",
					description:
						"Innovative Software Solutions Driving Growth and Excellence",
					siteName: "incomodum"
				},
				image: {
					width: 1280,
					height: 640,
					type: "image/png"
				}
			}}
			twitter={{
				card: "summary_large_image"
			}}
		/>
		<ThemeManager defaultTheme="auto" />
	</head>
	<body>
		<Header client:load />
		<div class="flex flex-col items-center w-full">
			<main class="w-full min-h-screen">
				<section class="relative pt-32 lg:pt-40 w-full px-8 lg:px-16">
					<div class="mx-auto max-w-7xl">
						<div class="mx-auto max-w-3xl md:text-center">
							<h1
								class="mb-6 text-4xl font-bold leading-tight lg:text-5xl"
							>
								Driving Innovation with <span class="text-page"
									>Purpose</span
								>
							</h1>
							<p class="text-lg text-foreground/60">
								Our mission is to empower businesses through
								innovative software solutions that drive growth and
								create lasting impact.
							</p>
						</div>
					</div>
				</section>

				<VisionMission client:visible />

				<CoreValues client:visible />

				<section class="py-16 lg:py-24 px-8 lg:px-16 w-full">
					<div class="mx-auto max-w-7xl">
						<div
							class="rounded-3xl bg-card p-8 md:text-center lg:p-12"
						>
							<h2 class="mb-4 text-3xl font-bold">
								Ready to start your <span class="text-page"
									>project</span
								>?
							</h2>
							<p class="mb-8 text-foreground/60">
								Let's discuss how we can help bring your ideas
								to life.
							</p>
							<a
								href="/contact"
								class="group inline-flex items-center rounded-full bg-page px-8 py-4 font-medium text-white transition-all hover:scale-105 hover:shadow-lg hover:shadow-page/20"
							>
								Get in Touch
								<ArrowRight
									className="ml-2 h-5 w-5 group-hover:translate-x-1 transition-transform"
								/>
							</a>
						</div>
					</div>
				</section>
			</main>
		</div>
		<Footer client:load />
	</body>
</html>
