---
import "@fontsource-variable/dm-sans"
import "../styles/globals.css"
import Header from "../components/Header"
import Footer from "../components/Footer"
import { SEO } from "astro-seo"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" href="/favicon.png" type="image/png" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="manifest" href="/site.webmanifest">
		<SEO
			title="incomodum app | incomodum"
			description="Self-improvement app to help you reach your goals"
			openGraph={{
				basic: {
					title: "incomodum",
					type: "website",
					image: "/assets/app-og.png"
				},
				optional: {
					locale: "en",
					description:
						"Self-improvement app to help you reach your goals",
					siteName: "incomodum.com"
				},
				image: {
					width: 1280,
					height: 640,
					type: "image/png"
				}
			}}
			twitter={{
				card: "summary_large_image"
			}}
		/>
		<style>
			:root {
				--page-color: #d8b26e;
			}
			html,
			body {
				font-family: "DM Sans Variable", "BlinkMacSystemFont",
					"Segoe UI";
				margin: 0;
				overscroll-behavior: none;
			}
		</style>
	</head>
	<body class="bg-[#F9F9F9] relative">
		<Header client:load />
		<div class="px-8 md:px-16 flex flex-col items-center w-full">
			<div class="max-w-[1500px] w-full">
				<main class="pt-[50px] w-full">
					<section
						class="flex flex-col md:flex-row items-center justify-center gap-7 md:justify-between"
					>
						<h1
							class="text-4xl md:text-7xl text-center md:text-start font-bold font-sans text-foreground"
						>
							Self-improvement<br /> app to help you reach<br /> your
							<b class="text-page">goals</b>
						</h1>
						<!-- TODO: Replace with svg -->
						<img
							src="/app.png"
							alt="App Logo"
							class="max-w-[413px] w-1/2 mt-8 md:mt-0"
						/>
					</section>
					<section
						class="flex flex-col text-center justify-center mt-32"
					>
						<h2
							class="text-4xl font-bold font-sans text-foreground"
						>
							What is <b class="text-page">Incomodum App</b>
						</h2>
						<div
							class="flex flex-col md:flex-row items-center justify-center gap-[100px] mt-12"
						>
							<div
								class="md:w-1/2 bg-white p-20 rounded-[33px] md:text-[28px] text-start"
							>
								<b class="text-page">Incomodum</b> is a time management
								app designed primarily for the younger generation,
								with a mission to help users overcome social media
								addiction and motivate them to self improvement.
							</div>
							<img src="/app-mock.png" />
						</div>
					</section>
				</main>
			</div>
		</div>
		<Footer />
	</body>
</html>
