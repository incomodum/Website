---
import "@fontsource-variable/dm-sans"
import "../styles/globals.css"
import Projects from "../components/Projects"
import Header from "../components/Header"
import Footer from "../components/Footer"
import Services from "@/components/Services"
import { ArrowRight, MailIcon } from "lucide-react"
import Linkedin from "@/components/icons/linkedin"
import ContactUs from "@/components/ContactUs"
import Mission from "@/components/Mission"
import { Image } from "astro:assets"
import { SEO } from "astro-seo"

import dmSans from "@fontsource-variable/dm-sans/files/dm-sans-latin-standard-normal.woff2"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link rel="icon" href="/favicon.png" type="image/png" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="manifest" href="/site.webmanifest" />
		<SEO
			title="incomodum"
			description="Innovative Software Solutions Driving Growth and Excellence"
			openGraph={{
				basic: {
					title: "incomodum",
					type: "website",
					image: "/assets/base-og.png"
				},
				optional: {
					locale: "en",
					description:
						"Innovative Software Solutions Driving Growth and Excellence"
				},
				image: {
					width: 1280,
					height: 640,
					type: "image/png"
				}
			}}
			twitter={{
				card: "summary_large_image"
			}}
		/>
		<style>
			html,
			body {
				font-family: "DM Sans Variable", "BlinkMacSystemFont",
					"Segoe UI";
				margin: 0;
				overscroll-behavior: none;
			}
		</style>
		<link
			rel="preload"
			as="font"
			type="font/woff2"
			href={dmSans}
			crossorigin="anonymous"
		/>
	</head>
	<body class="bg-[#F9F9F9] relative overflow-x-clip">
		<Header client:load />
		<div
			class="flex flex-col bg-[#F9F9F988] backdrop-blur-lg items-center w-full"
		>
			<div class="w-full px-8">
				<main class="w-full pt-[50px]">
					<section
						class="flex flex-col md:px-16 2xl:px-0 md:py-16 items-center justify-center md:justify-between"
					>
						<h1
							class="mb-6 text-5xl font-bold leading-tight lg:text-7xl"
						>
							Innovative <span class="text-[#ff7171]"
								>Software Solutions</span
							>
							<br />
							Driving Growth and <span class="text-[#ff7171]"
								>Excellence</span
							>
						</h1>
						<p
							class="mx-auto mb-12 md:text-center max-w-2xl text-xl text-gray-600"
						>
							We create cutting-edge software solutions that help
							businesses transform, scale, and achieve their
							digital ambitions.
						</p>
						<div class="flex flex-wrap justify-center gap-6">
							<a
								href="/#contact"
								class="inline-flex w-full md:w-fit items-center justify-center group rounded-full bg-[#ff7171] px-8 py-4 font-medium text-white transition-all hover:scale-105 hover:shadow-lg hover:shadow-[#ff7171]/20"
							>
								Get Started
								<ArrowRight
									className="ml-2 size-5 group-hover:translate-x-1 transition-transform"
								/>
							</a>
							<a
								href="/projects"
								class="inline-flex w-full md:w-fit items-center justify-center rounded-full border-2 border-gray-200 px-8 py-4 font-medium text-gray-700 transition-all hover:border-gray-300 hover:shadow-lg"
							>
								View Our Work
							</a>
						</div>
					</section>
					<div class="color-blur left"></div>
					<div id="services"></div>
					<Services client:visible />
					<div class="color-blur right"></div>
					<section
						class="mt-32 flex max-w-7xl mx-auto flex-col gap-7"
					>
						<h2
							class="text-4xl font-bold text-center md:text-start font-sans text-foreground"
						>
							Featured <b class="text-page">projects</b>
						</h2>
						<Projects client:visible />
					</section>
					<div id="mission"></div>
					<div class="color-blur left"></div>
					<Mission client:visible />
					<div id="contact"></div>
					<section
						class="pt-56 pb-48 flex flex-col-reverse overflow-y-clip lg:flex-row relative items-center lg:justify-evenly max-w-7xl mx-auto gap-52"
					>
						<div
							class="flex flex-col relative w-full lg:w-[40%] items-center gap-6"
						>
							<div
								class="hidden lg:block w-[56vw] max-w-[900px] rotate-[-7.12deg] absolute h-[886px] -top-20 rounded-t-3xl bg-white z-[-2]"
							>
							</div>
							<h2
								class="text-3xl lg:text-4xl flex flex-row w-full items-center justify-center lg:justify-start font-bold font-sans px-7 text-foreground"
							>
								Let's&nbsp;<b class="text-page">Talk</b>
							</h2>
							<div
								class="bg-white lg:bg-transparent w-full flex flex-col gap-5 rounded-[33px] p-7 lg:py-0 text-foreground"
							>
								<ContactUs client:visible />
							</div>
						</div>
						<div
							class="flex flex-col relative w-full lg:w-[40%] items-center gap-6"
						>
							<div
								class="hidden lg:block w-[43vw] max-w-[930px] rotate-[7.12deg] absolute h-[886px] -top-20 rounded-t-3xl bg-linear-to-br from-[#1C274C] to-[#6F4154] z-[-1]"
							>
							</div>
							<h2
								class="text-3xl lg:hidden flex flex-row items-center font-bold font-sans text-foreground"
							>
								Our&nbsp;<b class="text-page">Team</b>
							</h2>
							<div
								class="bg-linear-to-br lg:bg-none w-full flex flex-col gap-5 from-[#1C274C] to-[#6F4154] rounded-[33px] p-7 text-white"
							>
								<div class="flex flex-row min-w-fit gap-6">
									<div
										class="w-[121px] h-[121px] rounded-full p-[3px] border-page border-[3px]"
									>
										<Image
											width={121}
											height={121}
											src="/assets/team/lucas-ligas.jpeg"
											alt="Lucas Ligas"
											class="w-full h-full rounded-full bg-white"
										/>
									</div>
									<div class="flex flex-col justify-center">
										<p class="font-bold text-lg">
											Lucas Ligas
										</p>
										<p class="font-light">CMO</p>
										<div
											class="flex flex-row md:flex-col mt-2"
										>
											<a
												href="https://www.linkedin.com/in/lucas-ligas-a6632b282/"
												aria-label="linkedin"
												class="flex flex-row items-center"
											>
												<Linkedin
													className="text-app"
												/>&nbsp;
												<p class="hidden md:block">
													Lucas Ligas
												</p>
											</a>
											<a
												href="mailto:lucasligas15@gmail.com"
												class="flex flex-row items-center"
												aria-label="email"
											>
												<MailIcon
													className="text-app"
												/>&nbsp;
												<p class="hidden md:block">
													lucasligas15@gmail.com
												</p>
											</a>
										</div>
									</div>
								</div>
								<div class="flex flex-row min-w-fit gap-6">
									<div
										class="w-[121px] h-[121px] rounded-full p-[3px] border-page border-[3px]"
									>
										<Image
											width={121}
											height={121}
											src="/assets/team/daniel-czaja.jpeg"
											alt="Daniel Czaja"
											class="w-full h-full rounded-full bg-white"
										/>
									</div>
									<div class="flex flex-col justify-center">
										<p class="font-bold text-lg">
											Daniel Czaja
										</p>
										<p class="font-light">CDO</p>
										<div
											class="flex flex-row md:flex-col mt-2"
										>
											<a
												href="https://www.linkedin.com/in/daniel-adam-czaja-2aab07257/"
												aria-label="linkedin"
												class="flex flex-row items-center"
											>
												<Linkedin
													className="text-app"
												/>&nbsp;
												<p class="hidden md:block">
													Daniel Czaja
												</p>
											</a>
											<a
												href="mailto:danielczaja12@gmail.com"
												class="flex flex-row items-center"
												aria-label="email"
											>
												<MailIcon
													className="text-app"
												/>&nbsp;
												<p class="hidden md:block">
													danielczaja12@gmail.com
												</p>
											</a>
										</div>
									</div>
								</div>
								<div class="flex flex-row min-w-fit gap-6">
									<div
										class="w-[121px] h-[121px] rounded-full p-[3px] border-page border-[3px]"
									>
										<Image
											width={121}
											height={121}
											src="/assets/team/jakub-krcmarik.jpeg"
											alt="Jakub Krčmárik"
											class="w-full h-full rounded-full bg-white"
										/>
									</div>
									<div class="flex flex-col justify-center">
										<p class="font-bold text-lg">
											Jakub Krčmárik
										</p>
										<p class="font-light">CTO</p>
										<div
											class="flex flex-row md:flex-col mt-2"
										>
											<a
												href="https://www.linkedin.com/in/jakub-krcmarik/"
												aria-label="linkedin"
												class="flex flex-row items-center"
											>
												<Linkedin
													className="text-app"
												/>&nbsp;
												<p class="hidden md:block">
													Jakub Krčmárik
												</p>
											</a>
											<a
												href="mailto:mindstormjak@gmail.com"
												class="flex flex-row items-center"
												aria-label="email"
											>
												<MailIcon
													className="text-app"
												/>&nbsp;
												<p class="hidden md:block">
													mindstormjak@gmail.com
												</p>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</section>
				</main>
			</div>
		</div>
		<Footer />
	</body>
</html>
