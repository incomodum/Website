---
import "@fontsource-variable/dm-sans"
import "@/styles/globals.css"
import Header from "@/components/Header"
import Footer from "@/components/Footer"
import ServicesList from "@/components/ServicesList"
import { SEO } from "astro-seo"
import { ArrowRight } from "lucide-react"
import Placeholder from "@/components/Placeholder"
import ThemeManager from "@/components/ThemeManager.astro"
const technologies = [
	{
		category: "Frontend",
		items: ["React", "Next.js", "Vue.js", "Nuxt", "TypeScript"]
	},
	{
		category: "Backend",
		items: ["Node.js", "Python", "Rust", "PHP"]
	},
	{
		category: "Mobile",
		items: ["React Native"]
	},
	{
		category: "Database",
		items: ["PostgreSQL", "MongoDB", "MySQL", "Redis"]
	},
	{
    	category: "DevOps",
    	items: ["Docker", "GitHub Actions"],
  	},
]
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link rel="icon" href="/favicon.png" type="image/png" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="manifest" href="/site.webmanifest" />
		<SEO
			title="Services | incomodum "
			description="Innovative Software Solutions Driving Growth and Excellence"
			openGraph={{
				basic: {
					title: "Services",
					type: "website",
					image: "/assets/base-og.png"
				},
				optional: {
					locale: "en",
					description:
						"Innovative Software Solutions Driving Growth and Excellence",
					siteName: "incomodum"
				},
				image: {
					width: 1280,
					height: 640,
					type: "image/png"
				}
			}}
			twitter={{
				card: "summary_large_image"
			}}
		/>
		<ThemeManager defaultTheme="auto" />
	</head>
	<body>
		<Header client:load />
		<div class="flex flex-col items-center w-full">
			<main class="w-full min-h-screen">
				<section class="relative pt-32 lg:pt-40 w-full px-8 lg:px-16">
					<div class="mx-auto max-w-7xl">
						<div class="mx-auto max-w-2xl md:text-center">
							<h1
								class="mb-6 text-4xl font-bold leading-tight lg:text-5xl"
							>
								Comprehensive <span class="text-page"
									>Software Solutions</span
								> for Your Business
							</h1>
							<p class="text-lg text-foreground/60">
								From custom software development to data
								analytics, we provide end-to-end solutions to
								help your business thrive in the digital age.
							</p>
						</div>
					</div>
				</section>

				<ServicesList client:visible />

				<section class="py-16 lg:py-24 px-8 lg:px-16">
					<div class="mx-auto max-w-7xl">
						<div class="grid gap-12 lg:grid-cols-2">
							<div>
								<h2 class="mb-6 text-3xl font-bold lg:text-4xl w-full">
									Technologies We <span class="text-page"
										>Work With</span
									>
								</h2>
								<p class="mb-8 text-foreground/60">
									We use the latest technologies and
									frameworks to build scalable, secure, and
									high-performance solutions.
								</p>
								<div class="grid gap-6 sm:grid-cols-2">
									{
										technologies.map((tech) => (
											<div class="rounded-lg bg-card p-6">
												<h3 class="mb-2 font-semibold">
													{tech.category}
												</h3>
												<p class="text-sm text-foreground/60">
													{tech.items.join(", ")}
												</p>
											</div>
										))
									}
								</div>
							</div>
							<div class="relative aspect-square lg:aspect-auto">
								<Placeholder className="rounded-3xl overflow-clip max-w-[600px] aspect-square w-full" />
								<div
									class="absolute -right-4 -top-4 h-48 w-48 rotate-12 rounded-3xl bg-page/10"
								>
								</div>
								<div
									class="absolute -bottom-4 -left-4 h-48 w-48 -rotate-12 rounded-3xl bg-[#1a1b50]/10"
								>
								</div>
							</div>
						</div>
					</div>
				</section>

				<section class="py-16 lg:py-24 px-8 lg:px-16 w-full">
					<div class="mx-auto max-w-7xl">
						<div
							class="rounded-3xl bg-card p-8 md:text-center lg:p-12"
						>
							<h2 class="mb-4 text-3xl font-bold">
								Ready to start your <span class="text-page"
									>project</span
								>?
							</h2>
							<p class="mb-8 text-foreground/60">
								Let's discuss how we can help bring your ideas
								to life.
							</p>
							<a
								href="/#contact"
								class="group inline-flex items-center rounded-full bg-page px-8 py-4 font-medium text-white transition-all hover:scale-105 hover:shadow-lg hover:shadow-page/20"
							>
								Get in Touch
								<ArrowRight
									className="ml-2 h-5 w-5 group-hover:translate-x-1 transition-transform"
								/>
							</a>
						</div>
					</div>
				</section>
			</main>
		</div>
		<Footer client:load />
	</body>
</html>
