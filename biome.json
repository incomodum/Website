{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 150
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "none",
			"lineWidth": 150,
			"jsxQuoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessFragments": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn",
				"useUniqueElementIds": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"useValidAnchor": "off",
				"useSemanticElements": "off",
				"noSvgWithoutTitle": "off"
			},
			"nursery": {
				"useSortedClasses": "warn"
			}
		}
	},
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/astro.config.mjs",
			"!**/*.d.ts",
			"!node-modules",
			"!.expo",
			"!.vscode",
			"!yarn.lock",
			"!ios",
			"!android",
			"!.DS_Store",
			"!**/*.lock",
			"!.gitattributes",
			"!**/*.md",
			"!**/*.ttf",
			"!**/*.png",
			"!**/*.yml"
		]
	}
}
